<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="client"    class="com.pogorelov.goitspring.Client">
        <constructor-arg type="java.lang.Long" value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>
    <bean id="consoleEventLogger"  class="com.pogorelov.goitspring.loggers.ConsoleEventLogger"/>
    <bean id="app"    class="com.pogorelov.goitspring.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>
    <bean id="event" class="com.pogorelov.goitspring.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>
    <bean id="fileEventLogger" class="com.pogorelov.goitspring.loggers.FileEventLogger" init-method="init">
        <constructor-arg type="java.lang.String" value="log.txt"/>

    </bean>
    <bean id="cacheFileEventLogger" class="com.pogorelov.goitspring.loggers.CacheFileEventLogger" parent="fileEventLogger" destroy-method="destroy">
        <constructor-arg type="java.lang.Integer" value="3"/>
    </bean>

</beans>